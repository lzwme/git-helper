{
  "name": "@lzwme/git-helper",
  "version": "1.4.2",
  "description": "一个简单的 git 提交等操作的辅助小工具",
  "main": "esm/index.js",
  "browser": "esm/index.js",
  "typings": "esm/index.d.ts",
  "type": "module",
  "bin": {
    "githelper": "bin/githelper.js",
    "gh": "bin/githelper.js"
  },
  "repository": "http://github.com/lzwme/git-helper.git",
  "author": {
    "name": "renxia",
    "email": "lzwy0820@qq.com",
    "url": "https://lzw.me"
  },
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=14.18"
  },
  "keywords": [
    "git",
    "git helper",
    "git commit"
  ],
  "packageManager": "pnpm@7.6.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run watch:build",
    "start": "npm run watch",
    "build": "run-s clean && run-p build:*",
    "build:esm": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "pnpm jest",
    "watch": "run-s clean && run-p \"watch:build\" \"watch:test\"",
    "watch:build": "npm run build:esm -- -w",
    "watch:test": "pnpm jest --watch",
    "cov": "run-s build test:unit cov:html",
    "cov:html": "pnpm jest --coverage",
    "doc": "npm run doc:html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out docs",
    "version": "standard-version",
    "prepare-release": "run-s build test doc:html version",
    "release": "run-s build doc",
    "clean": "node scripts/rmdir.js ./esm ./docs"
  },
  "devDependencies": {
    "@jest/types": "^29.3.1",
    "@lzwme/fed-lint-helper": "^2.1.4",
    "@types/eslint": "^8.4.10",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.12",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "console-log-colors": "^0.3.3"
  }
}
