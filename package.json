{
  "name": "@lzwme/git-helper",
  "version": "1.4.1",
  "description": "一个简单的 git 提交等操作的辅助小工具",
  "main": "cjs/index.js",
  "browser": "cjs/index.js",
  "typings": "cjs/index.d.ts",
  "module": "esm/index.js",
  "bin": {
    "githelper": "bin/githelper.js",
    "gh": "bin/githelper.js"
  },
  "repository": "http://github.com/lzwme/git-helper.git",
  "author": {
    "name": "renxia",
    "email": "lzwy0820@qq.com",
    "url": "https://lzw.me"
  },
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "git",
    "git helper",
    "git commit"
  ],
  "packageManager": "pnpm@7.6.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com"
  },
  "scripts": {
    "dev": "npm run watch:build",
    "start": "npm run watch",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc --silent ava",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch",
    "cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:summary": "nyc report --reporter=text-summary",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out docs",
    "version": "standard-version",
    "prepare-release": "run-s build test doc:html version",
    "release": "run-s build doc",
    "clean": "node scripts/rmdir.js ./cjs ./esm"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/eslint": "^8.4.10",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "ava": "^5.0.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.20",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "console-log-colors": "^0.2.3"
  },
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "typescript_ava": {
      "extensions": [
        "ts",
        "tsx"
      ],
      "rewritePaths": {
        "src/": "cjs/"
      },
      "compile": false
    },
    "files": [
      "src/**/*.spec.ts"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
