{
    "compilerOptions": {
        "baseUrl": "./src",
        "skipLibCheck": true,
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "lib": ["esnext"],
        "typeRoots" : ["./typings", "./node_modules/@types"]
    },
    "exclude": [
        "dist",
        "node_modules",
        "**/node_modules/*"
    ],
    "include": [
        "./src"
    ]
}
