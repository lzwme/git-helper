{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "outDir": "esm",
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "pretty": true,
    "lib": ["ESNext", "dom"],
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "exclude": ["esm", "cjs"],
  "compileOnSave": false
}
